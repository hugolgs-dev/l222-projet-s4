{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1 class="alert alert-success text-center ">Article</h1>

    <table class="table table-hover text-center align-middle table-success">
        <tbody>
            <tr>
                <th>Id</th>
                <td class="table-light">{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td class="table-light">{{ article.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td class="table-light fst-italic">{{ article.content }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td class="table-light">
                    {% if article.Category.name is defined %}
                        {{ article.Category.name }}
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-evenly">
        <a class="btn btn-primary" href="{{ path('article_index') }}">back to list</a>

        <a class="btn btn-warning text-light" href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
    </div>
        {{ include('article/_delete_form.html.twig') }}
        
{% endblock %}
